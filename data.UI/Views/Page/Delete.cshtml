@using demo.Service;

@model PageViewModel

<div class="del-confirm">
    <div class="del-warn">
        <picture></picture>
        <div>
            <span>Do you want to delete this page?</span>
        </div>
    </div>
    <div class="edit-del-butt">
        <div class="edit-del-ok">
            @Ajax.ActionLink("Delete",
                         "Delete", "Page",
                new { pageId = Model.Id, articleId = Model.ArticleId },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "page-loading",
                    UpdateTargetId = "tobeupdated",
                    OnBegin = "turnOffDeleteStyle",
                    OnComplete = "selectFirstTab"
                })
        </div>
        <div class="edit-del-cancel">
            <span>Cancel</span>
        </div>
    </div>
</div>
<div class="del-background"></div>
