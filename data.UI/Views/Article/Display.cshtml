@model demo.Service.ArticleViewModel


@{
    ViewBag.Title = "Article Reader";
    ViewBag.Logo = "../images/ebook64.png";
    ViewBag.Header = "Article Viewer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<article class="container-fluid">
    <header class="row manager-page-title">
        <div class="col-md-12 title">
            <h1><span>@Model.Title</span></h1>
        </div>
        <div class="col-md-12 description"><h3>@Model.Description</h3></div>
    </header>
    <div class="row">
        @if (Model.PagesGlobe != null)
        {
            <div class="col-md-12 pager-container">
                <div id="pager">
                    <ul>
                        <li class="nav-prev"><span>&lsaquo;</span></li>
                        <li class="nav-numbers"><span>1</span><span>&#x2F;</span><span>@Model.PagesGlobe.Count</span></li>
                        <li class="nav-next"><span>&rsaquo;</span></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-12 img-list-container">
                <div class="img-list">
                    <ul id="pagination">
                        <li>
                            @{ int i = 0; }
                            @foreach (var page in Model.PagesGlobe.Pages)
                            {
                                if (i % 1 == 0 && i != 0)
                                {
                                    @:</li><li>
                                }
                                @Html.Partial("~/Views/Page/Display.cshtml", page.Content)
                                i++;
                            }
                        </li>
                    </ul>      
                </div>
            </div>              }
    </div>
</article>

@section Scripts {
    <script type="text/javascript">
    $(function () {
        var myObj = $('ul#pagination').paginatearticle({
            nextSelector: 'li.nav-next',
            prevSelector: 'li.nav-prev',
            pagerSelector: 'li.nav-numbers',
            itemslistSelector: 'div.img-list',
            listcontainerSelector: 'div.img-list-container',
            pagercontainerSelector: '.pager-container',
            currentpage: 1
        });
    });
    </script>
}

