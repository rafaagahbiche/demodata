@using demo.Service;

@model ArticleViewModel

<div class="article-delete hidden-bloc">
    <div class="background"></div>
    <div class="confirm">
        <div class="message">
            <picture></picture>
            <div>
                <span>Do you want to delete this article?</span>
            </div>
        </div>
        <div class="buttons">
            <div class="ok">
                @Ajax.ActionLink("Delete",
                         "Delete", "Article",
                new { id = Model.Id },
                new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    LoadingElementId = "loadingArticle",
                    UpdateTargetId = "article-details",
                    OnBegin = "turnOffDeleteStyle"
                })
            </div>
            <div class="cancel">
                <span>Cancel</span>
            </div>
        </div>
    </div>
</div>